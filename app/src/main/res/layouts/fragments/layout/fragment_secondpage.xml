<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/title"
        android:text="第二界面" />

    <com.liuwen.myproject.views.LoadingLayout
        android:id="@+id/loadlayout_secondpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/erv_secondpage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAppBg"
                android:divider="@null"
                app:layout_empty="@layout/content_recyclerview_empty"
                app:scrollbarStyle="insideOverlay"
                app:scrollbars="none" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_secondpage_top"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@mipmap/app_logo"
                app:backgroundTint="@color/colorTheme"
                app:borderWidth="0dp"
                app:elevation="8dp"
                app:pressedTranslationZ="16dp"
                app:rippleColor="@color/colorAlpha" />
        </FrameLayout>


    </com.liuwen.myproject.views.LoadingLayout>

</LinearLayout>